# 服务器配置 - 生产环境
PORT=3000
NODE_ENV=production
LOG_LEVEL=error

# 数据库配置 - 连接到本地数据库
DB_HOST=localhost
DB_PORT=3306
DB_NAME=hiking_app
DB_USER=hiking_user
DB_PASSWORD=senbochen

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# CORS配置 - 仅允许生产域名
CORS_ORIGIN=http://115.190.252.62,https://115.190.252.62

# API基础URL（生产环境）
API_BASE_URL=http://115.190.252.62

# API版本
API_VERSION=v1

# 是否使用 API 前缀
# Nginx 已经处理了 /api/v1/ 前缀，所以这里设为 false
# 这样访问 /api/v1/users 时，Nginx 转发到 localhost:3000/users
USE_API_PREFIX=false
